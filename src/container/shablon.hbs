<main class='m-4'>
  
  {{! Варіант з IF }}
  {{#with navigation}}
    <section class='card my-5'>
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            {{#if href}}
              <a
                href='{{href}}'
                class='nav-link'
              >{{text}}</a>
            {{else}}
              <a
                href='{{href}}'
                class='nav-link disabled'
              >{{text}}</a>
            {{/if}}
          </div>
        {{/each}}
      </div>
    </section>
  {{/with}}

  {{! Варіант з допоміжною 4-ою ссилкою }}
  {{#with navigation}}
    <section class='card my-3'>
      <div class='nav'>
        {{#each links}}
          <div class='nav-item'>
            <a href='{{href}}' class='nav-link'>
              {{text}}
            </a>
          </div>
        {{/each}}
        <div>
          <a href='{{href}}' class='nav-link disabled'>
            Disabled
          </a>
        </div>
      </div>
    </section>
  {{/with}}

  {{!-- Розділена навігація через TAB --}}
  {{#with actionBlock}}
  <section class='my-5'>
    <div class='nav nav-tabs'>
      {{#each tabs}}
        {{#if isActive}}
          <div class='nav-item'>
            <a href='#' class='nav-link active'>
              <b>{{text}}</b></a>
          </div>
        {{else}}
          <div class='nav-item'>
            <a href='#' class='nav-link'>
              {{text}}</a>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </section>
  <hr />
  {{#with report}}

  {{!-- Навігація  каскади в каскаді --}}
    <section class='nav my-4'>
    {{#each footer}}
      <div class='nav-item'>
        <a href='{{0.link}}' class='nav-link'>{{0.text}}</a>
        <a href='{{1.link}}' class='nav-link'>{{1.text}}</a>
        <a href='{{2.link}}' class='nav-link'>{{2.text}}</a>
        <a
          href='{{3.link}}'
          class='nav-link disabled'
        >{{3.text}}</a>
      </div>
    {{/each}}
  </section>

  {{!-- Breadcrumb з одним неактивним --}}
    <section class='row my-3'>
    <ol class='breadcrumb'>
      {{#each breadcrumb}}
        {{#if url}}
          <li class='breadcrumb-item'>
            <a href='{{url}}'>{{name}}</a>
          </li>
        {{else}}
          <li class='breadcrumb-item'>
            <a>{{name}}</a>
          </li>
        {{/if}}
      {{/each}}
    </ol>
  </section>

  {{!-- Form-select --}}
  <section>
    <div><h1>{{header}}</h1></div>
    <div class='row my-2'>
      {{#each sortBlock}}
        <div class='col-3'>
          <select class='form-select my-3'>
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/each}}
    </div>
  </section>

    {{!-- Form checkbox --}}
    <section>
      <label class='form-label'>{{title}}</label>
      <div class='form-check'>
        <label class='form-check-label'>
          {{value}}
        </label>
        <input
          type='checkbox'
          class='form-check-input'
        />
      </div>
    </section>

</main>