{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      <section>

          {{> title data="Work history" big=true}}

        <div>
          <ul>
            {{#each works}}
              <li>
                <div>{{position}}</div>
                <br>
                <div>
                  {{duration.from}} - 
                  {{#if duration.to}}
                  {{duration.to}}
                  {{else}}
                  (досі працюємо)
                  {{/if}}
                </div>
                <br>
                
                {{#unless company.url}}
                  <b>{{company.name}}</b>
                  {{else}}
                  <div>{{> link text=company.name href=company.url blank=true noLine=true }}</div>
                {{/unless}}

                <br>
                <br>
                <div><strong>Projects: ({{projectAmount}})</strong></div>
                <br>
                <ul>
                  {{#each projects}}
                  <li>
                    <div>{{> link text=name href=url blank=true noLine=true}}</div>
                    <br>
                    <div><p>{{about}}</p></div>
                    <br>
                    <em>“Project stacks” ({{stackAmount}})</em>
                    <br>
                      <ul>
                        {{#each stacks}}
                          <li>{{name}}</li>
                        {{/each}}
                      </ul>
                    <br>
                    <em>“Project awards”</em>
                    <br>
                    <ul>
                      {{#each awards}}
                        <li>{{name}}</li>
                      {{/each}}
                    </ul>
                  </li>
                  {{/each}}
                </ul>
              </li>
              <br/>
            {{/each}}
            </ul>
        </div>
      </section>
    </main>
  {{/with}}
</div>

