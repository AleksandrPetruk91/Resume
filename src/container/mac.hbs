<div>
  <main>
    <section>
      <div><h1>{{name}}</h1></div>
      <p>{{category}}</p>
      <p>{{description}}</p>
      <p>Price - {{price}} usd.</p>
    </section>
    <hr />
    <section>
      {{#with features}}
        <div><h2>Features</h2></div>
        <br />
        <ul>
          {{#with processor}}
            <div><h5>Processor</h5></div>

            <li>Brand - {{brand}}</li>
            <li>Model - {{model}}</li>
            <li>Speed - {{speed}}</li>
            <li>Cores - {{cores}}</li>
            <li>Cache - {{cache}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          {{#with memory}}
            <div><h5>Memory</h5></div>

            <li>Type - {{type}}</li>
            <li>Size - {{size}}</li>
            <li>Speed - {{speed}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          {{#with storage}}
            <div><h5>Storage</h5></div>

            <li>Type - {{type}}</li>
            <li>Size - {{size}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          {{#with display}}
            <div><h5>Display</h5></div>

            <li>Size - {{size}}</li>
            <li>Resolution - {{resolution}}</li>
            <li>Technology - {{technology}}</li>
            <li>Color space - {{color_space}}</li>
            <li>Brightness - {{brightness}}</li>
            <li>Refresh rate - {{refresh_rate}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          {{#with graphics}}
            <div><h5>Graphics</h5></div>

            <li>Brand - {{brand}}</li>
            <li>Model - {{model}}</li>
            <li>Memory - {{memory}}</li>
          {{/with}}
        </ul>
        <br />
        <ol>
          <div><h5>Ports</h5></div>

          {{#each ports}}
            <li>{{type}} - {{count}} pieces.</li>

            {{#if features}}
              <ul>
                <div><b>Features:</b></div>
                {{#each features}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            {{/if}}

            <br />
          {{/each}}
        </ol>
        <br />
        <ul>
          {{#with battery}}
            <div><h5>Battery</h5></div>

            <li>Type - {{type}}</li>
            <li>Capacity - {{capacity}}</li>
            <li>Life - {{life}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          <div><h5>Weight</h5> - {{weight}}</div>
        </ul>
        <br />
        <ul>
          {{#with dimensions}}
            <div><h5>Dimensions</h5></div>

            <li>Height - {{height}}</li>
            <li>Width - {{width}}</li>
            <li>Depth - {{depth}}</li>
          {{/with}}
        </ul>
        <br />
        <ul>
          <div><h5>Operating system</h5>
            -
            {{operating_system}}</div>
        </ul>
        <br />
        <ol>
          <div><h5>Accessories</h5></div>
          {{#each accessories}}
            <li>{{name}}</li>
            <div>Price - {{price}} usd.</div>
            <br />
          {{/each}}
        </ol>
      {{/with}}
    </section>
  </main>
</div>