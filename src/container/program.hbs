<main class='m-4'>
  {{#with program}}
    {{#with excursion}}
      <section>
        <div class='text-center'><h1>{{name}}</h1></div>

        <p><h3>{{location.city}},
            {{location.country}}</h3></p>
        <p>Tour date: <time>{{date}}</time></p>
      </section>
      <hr />
      <section class='row'>

        {{#each program}}
          <div class='col-6'>
            <ul>
              <div> <h3>{{name}}</h3> </div>
              <li>{{type}} </li>
              <li> Duration: {{duration}} hours.</li>
              <br />
              <div>Details :</div>

              {{#with details}}
                <section>
                  {{#with museum}}
                    <div><h4>{{name}}</h4></div>
                    <br />
                    {{#with location}}
                      <div>Location:
                        {{address}},
                        {{city}},
                        {{country}}.</div>
                    {{/with}}

                    <div>Exhibits: </div>
                    <br />
                    {{#each exhibits}}

                      <div>{{name}}.</div>
                      <ul>
                        {{#if artist}}<li>Artist :{{artist}}
                          </li>{{/if}}
                        <li>{{description}}</li>
                        <li>
                          {{#if audio_guide}}Audio guide-
                            available{{/if}}
                        </li>
                      </ul>
                      <br />
                    {{/each}}
                  {{/with}}

                  {{#with venue}}
                    <div><h3>{{name}}</h3></div>
                    <br />
                    {{#with location}}
                      <div>Location:
                        {{address}},
                        {{city}},
                        {{country}}.</div>
                    {{/with}}
                  {{/with}}

                  {{#if venue}}<div>Performers:</div>{{/if}}
                  {{#each performers}}
                    <ul>
                      <li>{{name}} - {{type}}.</li>
                    </ul>
                  {{/each}}
                  <br />
                  {{#with guide}}
                    <div>Tour guide:
                      {{name}}
                      (language-{{language}}, rating -
                      {{rating}})</div>
                  {{/with}}
                </section>
              {{/with}}
            </ul>
          </div>
        {{/each}}

      </section>
    {{/with}}
  {{/with}}
</main>