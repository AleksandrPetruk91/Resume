{{#each goodsList}}
  <div class='col-6'>
    <div class='card my-3'>
      <img
        class='card-img-top'
        src='{{img}}'
        alt='{{name}}'
      />
      <div class='card-body'>
        {{#if isHot}}
          <span class='badge text-bg-warning'>HOT!</span>
        {{/if}}
        {{#if isNew}}
          <span class='badge text-bg-primary'>Нове</span>
        {{/if}}
        {{#if isFast}}
          <button class='btn btn-success btn-sm my-2'>Швидка
            доставка
          </button>
        {{/if}}
        {{#if isFree}}
          <button
            class='btn btn-secondary btn-sm my-2'
          >Безкоштовна доставка
          </button>
        {{/if}}

        <div>
          <h5 class='card-title mt-2'>{{name}}</h5></div>
        {{#with review}}
          <p>{{amount}} {{text}}</p>
        {{/with}}

        <p><h4>{{price}}</h4></p>

        <p>{{delivery}}</p>

        {{#each buttons}}
          {{#if isPrimary}}
            <a
              href='{{link}}'
              class='btn btn-primary mb-2'
              target='_blanc'
            >{{text}}</a>
          {{/if}}
          {{#if isSecondary}}
            <a
              href='{{link}}'
              class='btn btn-secondary mb-3'
              target='_blanc'
            >{{text}}</a>
          {{/if}}
        {{/each}}

        {{#each characteristics}}
          <ul>
            <li>{{title}}: {{value}}</li>
          </ul>
        {{/each}}

      </div>
    </div>
  </div>
{{/each}}